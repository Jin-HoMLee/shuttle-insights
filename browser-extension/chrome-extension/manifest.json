  {
  "manifest_version": 3,
  "name": "YouTube Badminton Shot Labeler",
  "version": "2.1.0",
  "description": "Advanced badminton video analysis tool with AI-powered pose detection and shot labeling for YouTube videos. ",
  "permissions": ["downloads", "scripting", "storage", "activeTab"],
  "host_permissions": [
    "https://www.youtube.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Toggle YouTube Badminton Shot Labeler"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": [
        "dist/content.js"
      ],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["badminton_shots_glossary.json"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "author": {
    "email": "support@shuttleinsights.com"
  },
  "homepage_url": "https://github.com/Jin-HoMLee/shuttle-insights",
  "minimum_chrome_version": "88",
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}