  {
  "manifest_version": 3,
  "name": "YouTube Badminton Shot Labeler",
  "version": "2.0",
  "description": "Label shots/events in any YouTube video, export to CSV.",
  "permissions": ["downloads", "scripting", "storage", "activeTab"],
  "host_permissions": [
    "https://www.youtube.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "YouTube Badminton Shot Labeler",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": [
        "content.js"
      ],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/badminton_shots_glossary.json"],
      "matches": ["<all_urls>"]
    }
  ]
}